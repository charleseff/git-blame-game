#!/usr/bin/env ruby
require "rubygems"
require "bundler"
root_dir = File.dirname(__FILE__) + '/../'

ENV['BUNDLE_GEMFILE'] = File.join(root_dir, 'Gemfile')
Bundler.require :default

require 'active_support/all'
require 'active_support/dependencies'
ActiveSupport::Dependencies.autoload_paths << root_dir + 'lib/git-blame-chain'

require 'optparse'
require 'colorize'


options = {}
OptionParser.new do |opts|
  opts.banner = <<-END.gsub(/^[ \t]+/m, '')
    Usage: git-blame-chain [options] path/to/filename
  END

  opts.separator ""
  opts.separator "Options:"

  opts.on("-s", "--sha", "--SHA [SHA]", String, "Set initial SHA (defaults to HEAD)") do |sha|
    options[:sha] = sha
  end

  opts.on_tail("-h", "--help", "Show this message") do
    puts opts
    exit
  end

end.parse!

path_to_file = ARGV[0]
raise OptionParser::MissingArgument.new("You must specify a path to a file ") if not path_to_file

GitBlameChain.new(path_to_file, options).run